<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateCardActivity">

    <TextView
        android:id="@+id/textAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="What account do you want to create a card to?"
        android:textSize="16dp" />

    <Spinner
        android:id="@+id/accSpinner"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textAcc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/withdrawLimit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accSpinner"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="90dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:hint="Withdraw limit"
            android:inputType="number" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/payLimit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accSpinner"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="20dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:hint="Pay Limit"
            android:inputType="number" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/withdrawTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accSpinner"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="70dp"
        android:text="Set the withdraw limit" />

    <TextView
        android:id="@+id/payTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accSpinner"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="50dp"
        android:text="Set the pay limit" />

    <TextView
        android:id="@+id/textCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="80dp"
        android:layout_marginBottom="310dp"
        android:text="Choose where you want to allow the cards to be used in"
        android:textAlignment="center" />

    <Switch
        android:id="@+id/switchWholeWorld"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textCheck"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-290dp"
        android:gravity="left"
        android:text="Whole World" />

    <Switch
        android:id="@+id/switchEurope"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switchWholeWorld"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:text="Europe" />

    <Switch
        android:id="@+id/switchNordic"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switchEurope"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:text="The Nordic Countries\n and Estonia" />

    <Switch
        android:id="@+id/switchFinland"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switchNordic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:text="Finland" />

    <Button
        android:id="@+id/saveButtonCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:text="Save" />

</RelativeLayout>