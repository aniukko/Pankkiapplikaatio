<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewChooseAcc"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Choose the account you want to see transactions from"
        android:textAlignment="center"/>

    <Spinner
        android:id="@+id/spinnerAcc"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewChooseAcc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <ListView
        android:id="@+id/transList"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/spinnerAcc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

</RelativeLayout>